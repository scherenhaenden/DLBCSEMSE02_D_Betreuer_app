<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".BetreuerApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/Theme.BetreuerApp">

        <!-- Login Activity as the starting point -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Activity (now a secondary activity) -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- Dashboard Activity -->
        <activity
            android:name=".DashboardActivity"
            android:exported="false" />

        <!-- ThesisList Activity -->
        <activity
            android:name=".ThesisListActivity"
            android:exported="false" />

        <!-- CreateThesis Activity -->
        <activity
            android:name=".CreateThesisActivity"
            android:exported="false" />

        <!-- TutorList Activity -->
        <activity
            android:name=".TutorListActivity"
            android:exported="false" />
            
        <!-- Supervision Request Activity -->
        <activity
            android:name=".SupervisionRequestActivity"
            android:exported="false"
            android:label="Betreuungsanfrage"
            android:parentActivityName=".TutorListActivity" />

        <!-- Create Thesis Offer Activity (Renamed from Topic) -->
        <activity
            android:name=".CreateThesisOfferActivity"
            android:exported="false"
            android:label="Thesis ausschreiben"
            android:parentActivityName=".ThesisOfferDashboardActivity" />
            
        <!-- Thesis Offer Dashboard Activity -->
        <activity
            android:name=".ThesisOfferDashboardActivity"
            android:exported="false"
            android:label="Meine Ausschreibungen"
            android:parentActivityName=".DashboardActivity" />

        <!-- Thesis Request Activity (New) -->
        <activity
            android:name=".ThesisRequestActivity"
            android:exported="false"
            android:label="Betreuungsanfragen"
            android:parentActivityName=".DashboardActivity" />
            
        <!-- Thesis Request Detail Activity (New) -->
        <activity
            android:name=".ThesisRequestDetailActivity"
            android:exported="false"
            android:label="Anfrage Details"
            android:parentActivityName=".ThesisRequestActivity" />

        <activity
            android:name=".ThesisDetailActivity"
            android:exported="false"
            android:label="Abschlussarbeit Details"
            android:parentActivityName=".ThesisListActivity" />

    </application>

</manifest>
