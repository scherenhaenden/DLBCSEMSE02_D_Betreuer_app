<?xml version="1.0" encoding="utf-8"?>
<!-- Dozenten-Dashboard-Ansicht, nur f체r Betreuer zug채nglich.
Wird 체ber ViewStub in activity_dashboard.xml inflatiert und zeigt betreuerspezifische Optionen wie Thesenangebote verwalten und Anfragen anzeigen. -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lecturerDashboardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dein Dashboard (Dozent)"
        android:textSize="20sp" />

    <!-- Karte f체r neue Anfragen -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/lecturer_requests_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="16dp"
        app:strokeColor="?attr/colorError"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_notifications"
                app:tint="?attr/colorError"
                android:contentDescription="Requests Icon" />

            <TextView
                android:id="@+id/lecturerRequestsCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorError"
                tools:text="Du hast 2 neue Betreuungsanfragen." />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <Button
        android:id="@+id/btn_manage_thesis_offers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Ausschreibungen verwalten"
        app:icon="@drawable/ic_document"
        app:iconGravity="textStart"
        style="@style/Widget.Material3.Button.TonalButton"/>

    <Button
        android:id="@+id/btn_my_sent_requests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Meine gesendeten Anfragen"
        app:icon="@drawable/ic_create"
        app:iconGravity="textStart"
        style="@style/Widget.Material3.Button.TonalButton"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/lecturer_thesis_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_document"
                app:tint="?attr/colorPrimary"
                android:contentDescription="Thesis Icon" />

            <TextView
                android:id="@+id/lecturerThesisCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textSize="16sp"
                tools:text="Du betreust 5 Abschlussarbeiten." />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
