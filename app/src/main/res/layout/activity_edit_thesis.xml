<?xml version="1.0" encoding="utf-8"?>
<!--
  Layout für die Bearbeitung einer Abschlussarbeit, zugänglich für Studenten und Betreuer. Wird in EditThesisActivity verwendet und
  ermöglicht das Ändern von Titel, Beschreibung, Fachbereich und Dokumenten.
-->

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditThesisActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Abschlussarbeit bearbeiten"
            app:navigationIcon="@drawable/ic_arrow_back" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Titel der Arbeit"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_thesis_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Beschreibung (optional)"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_thesis_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="3"
                    android:gravity="top"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fachgebiet"
                android:layout_marginBottom="24dp">

                <AutoCompleteTextView
                    android:id="@+id/dropdown_subject_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Document Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dokument"
                android:textAppearance="?attr/textAppearanceBody1"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_current_document"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kein Dokument vorhanden"
                android:textAppearance="?attr/textAppearanceBody2"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_download_document"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Herunterladen"
                    app:icon="@drawable/ic_download" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_upload_document"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Neues Dokument"
                    app:icon="@drawable/ic_file_upload" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_find_tutors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Betreuer finden"
                android:layout_marginBottom="16dp"
                app:icon="@drawable/ic_person" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_save_thesis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Speichern" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

