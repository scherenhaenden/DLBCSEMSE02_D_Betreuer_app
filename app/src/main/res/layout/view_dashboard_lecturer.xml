<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lecturerDashboardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dein Dashboard (Dozent)"
        android:textSize="20sp" />

    <!-- Karte für neue Anfragen -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/lecturer_requests_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="16dp"
        app:strokeColor="?attr/colorError"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_notifications"
                app:tint="?attr/colorError"
                android:contentDescription="Requests Icon" />

            <TextView
                android:id="@+id/lecturerRequestsCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorError"
                android:text="Du hast 2 neue Betreuungsanfragen." />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <Button
        android:id="@+id/btn_create_new_thesis_offer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Neues Thema ausschreiben"
        app:icon="@drawable/ic_add"
        app:iconGravity="textStart" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/lecturer_thesis_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_document"
                app:tint="?attr/colorPrimary"
                android:contentDescription="Thesis Icon" />

            <TextView
                android:id="@+id/lecturerThesisCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textSize="16sp"
                tools:text="Du betreust 5 Abschlussarbeiten." />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Liste der betreuten Arbeiten:"
        android:textStyle="bold"/>
    
    <!-- Platzhalter-Liste (Dummy) -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:background="#F5F5F5"
        android:text="1. Entwicklung einer App (Max Müller)\n2. KI in der Medizin (Lisa Schmidt)\n3. Cloud Computing (Tom Weber)" />

</LinearLayout>