<?xml version="1.0" encoding="utf-8"?>
<!-- Dashboard-Layout, zugänglich für Studenten und Betreuer.
Zeigt rollenbasierte Ansichten mit ViewStubs für Studenten- und Dozenten-Dashboards.
Wird in DashboardActivity verwendet. -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".DashboardActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Dashboard" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/welcomeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            tools:text="Hallo Stefan!" />

        <!-- ############ STUDENTEN-ANSICHT ############ -->
        <ViewStub
            android:id="@+id/stub_student_dashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout="@layout/view_dashboard_student" />

        <!-- ############ DOZENTEN-ANSICHT ############ -->
        <ViewStub
            android:id="@+id/stub_lecturer_dashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout="@layout/view_dashboard_lecturer" />

    </LinearLayout>

</LinearLayout>