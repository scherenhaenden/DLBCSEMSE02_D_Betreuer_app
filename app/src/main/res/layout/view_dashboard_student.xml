<?xml version="1.0" encoding="utf-8"?>
<!--
  Studenten-Dashboard-Ansicht, nur für Studenten zugänglich. Wird über ViewStub in activity_dashboard.xml inflatiert und zeigt
  studentenspezifische Optionen wie Thesiserstellung und Tutorensuche.
-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/studentDashboardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dein Dashboard (Student)"
        android:textSize="20sp" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/student_thesis_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_document"
                app:tint="?attr/colorPrimary"
                android:contentDescription="Thesis Icon" />

            <TextView
                android:id="@+id/studentThesisCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textSize="16sp"
                tools:text="Du hast 1 Abschlussarbeit im System." />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <Button
        android:id="@+id/btn_create_new_thesis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Neue Abschlussarbeit erstellen"
        app:icon="@drawable/ic_add"
        app:iconGravity="textStart" />

    <Button
        android:id="@+id/btn_find_tutor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Betreuer finden"
        app:icon="@drawable/ic_search"
        app:iconGravity="textStart"
        style="@style/Widget.Material3.Button.TonalButton"/>

    <Button
        android:id="@+id/btn_pending_requests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Ausstehende Anfragen"
        app:icon="@drawable/ic_notifications"
        app:iconGravity="textStart"
        style="@style/Widget.Material3.Button.TonalButton"/>

</LinearLayout>
